<% let data ;%>
<%- include( ("partials/header.ejs"), {data:data}) %>   
<div class="mt-12 w-screen h-screen flex justify-center items-center">
    <form class=" grid grid-cols-1 w-5/6 h-5/6 border-2 border-red-300  justify-center items-center" method="POST" action="/signUp">
        <div class="flex items-center justify-center w-full text-4xl ">
            Sign Up
        </div>
        <div class="flex items-center justify-center w-full text-2xl ">
          <%= error %>  
          </div>
        <div class=" grid grid-cols-1 md:grid-cols-2  items-center justify-center w-full ">
                    <div class=" flex w-full justify-center  items-center">First Name  :</div>
                    <div class="flex w-full justify-center items-center   "><input class="text-black w-3/4 pl-2  " name="firstName"  placeholder="first name " type="text" required> </div>
        </div>
        <div class=" grid grid-cols-1 md:grid-cols-2  items-center justify-center w-full ">
            <div class=" flex w-full justify-center  items-center">Last Name  :</div>
            <div class="flex w-full justify-center items-center   "><input class="text-black w-3/4 pl-2  " name="lastName"  placeholder="last name " type="text" required > </div>
        </div>
        <div class=" grid grid-cols-1 md:grid-cols-2  items-center justify-center w-full ">
            <div class=" flex w-full justify-center  items-center">Email :</div>
            <div class="flex w-full justify-center items-center   "><input class="text-black w-3/4 pl-2  " name="email"  placeholder="email@xyz.com " type="email" required> </div>
        </div>
        <div class=" grid grid-cols-1 md:grid-cols-2  items-center justify-center w-full ">
            <div class=" flex w-full justify-center  items-center">Password :</div>
            <div class="flex w-full justify-center items-center   "><input class="text-black w-3/4 pl-2  " name="password"  placeholder="type your password  " type="text" required> </div>
        </div>
        <div class=" grid grid-cols-1 md:grid-cols-2  items-center justify-center w-full ">
            <div class=" flex w-full justify-center  items-center">Contact no :</div>
            <div class="flex w-full justify-center items-center   "><input class="text-black w-3/4 pl-2  " name="contactNo"  placeholder="contact no (not compulsory) " type="text"> </div>
        </div>
        <div class=" grid grid-cols-1 md:grid-cols-2  items-center justify-center w-full ">
            <div class=" flex w-full justify-center  items-center">Profile Photo:</div>
            <div class="flex w-full justify-center items-center   "><input class="text-black w-3/4 pl-2  " name="profilePhoto"  placeholder="profile pic " type="file"> </div>
        </div>
        <div class="grid grid-cols-1 items-center justify-center w-full ">
            <button class=" w-3/6 p-2 m-auto hover:bg-red-500 focus:outline-none  border-2 border-red-500 text-white shadow-xl rounded-sm" type="submit"> Submit</button>
        </div>
    </form>
</div>
<%- include('./partials/footer.ejs') %>
